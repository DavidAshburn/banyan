<div data-controller="mapper" class="grid lg:grid-cols-[1fr_1024px_1fr] bg-emerald-800 min-h-[80vh]" >

  <div id="map" class="lg:col-start-2 h-[50vh]"></div>
  <div class="hidden row-start-2 text-xl font-bold text-white bg-black lg:col-start-2">
    <p data-mapper-target="markerlat"></p>
    <p data-mapper-target="markerlon"></p>
  </div>
  <button data-action="mapper#getLatLng" class="p-4 m-2 font-bold text-white bg-green-700 rounded lg:col-start-2">Report</button>
  <button data-action="mapper#addToData" class="p-4 m-2 font-bold text-white bg-green-700 rounded lg:col-start-2">Add</button>

  <button data-action="mapper#reportData" class="p-4 m-2 font-bold text-white bg-green-700 rounded lg:col-start-2">Data</button>

</div>