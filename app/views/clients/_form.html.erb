<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>




  <div class="formcontainer">
    <div class="mainpane sm:col-start-2">
      <p class="panetitle">New Client</p>
      <div class="panecontent">
        <div class="grid sm:grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-stone-700">
          <%= form.label :name %>
          <%= form.text_field :name, class: "rounded-lg text-lg px-2 bg-slate-100 text-dark font-bold focus:bg-accent" %>
        </div>
        <div class="grid sm:grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-stone-700">
          <%= form.label :contact_name, 'Contact'%>
          <%= form.text_field :contact_name, class: "rounded-lg text-lg px-2 bg-slate-100 text-dark font-bold focus:bg-accent" %>
        </div>
        <div class="grid sm:grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-stone-700">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: "rounded-lg text-lg px-2 bg-slate-100 text-dark font-bold focus:bg-accent" %>
        </div>
        <div class="grid sm:grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-stone-700">
          <%= form.label :email %>
          <%= form.text_field :email, class: "rounded-lg text-lg px-2 bg-slate-100 text-dark font-bold focus:bg-accent" %>
        </div>
        <div class="grid sm:grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-stone-700">
          <%= form.label :mail_address %>
          <%= form.text_field :mail_address, class: "rounded-lg text-lg px-2 bg-slate-100 text-dark font-bold focus:bg-accent" %>
        </div>
        <div class="grid sm:grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-stone-700">
          <%= form.label :notes %>
          <%= form.text_area :notes, class: "rounded-lg text-lg px-2 bg-slate-100 text-dark font-bold focus:bg-accent" %>
        </div>
        <div class="hidden">
          <%= form.number_field :user_id, value: current_user.id %>
        </div>
        <%= form.submit 'Add Client', class: "p-2 px-4 text-center bg-dark font-bold font-inter text-2xl" %>
        <%= link_to "Cancel", user_dashboard_path, class:"p-2 px-4 text-center bg-light font-bold text-dark font-inter text-2xl" %>
      </div>
    </div>

  </div>
<% end %>
