<div class="hidden" id="mapboxpub"><%= ENV["MAPBOX_PUB"] %></div>
<div data-controller="mapsedit" id="mapsedit" class="min-h-screen mesh1">
  <div class="hidden">
    <div data-mapsedit-target="targetaddress"><%= @target %></div>
    <input type="number" data-mapsedit-target="pid" value=<%=@pid%>></input>
  </div>

  <div class="relative">
    <div id="map" class="h-[90svh]"></div>
    <div class="w-8 h-8 border-2 rounded-full abs-center border-light"></div>
  </div>

  <div class="grid justify-center grid-cols-3 gap-4 p-2 bg-stone-500" id="treecontrols">
    <%= link_to 'Dashboard', user_dashboard_path, class: "lightbutton-s hover:bg-dark hover:text-light justify-self-center"%>
    <button type="button" data-action="mapsedit#addTree" class="darkbutton justify-self-center">Add Tree</button>
  </div>
  <div id="treeinputs" class="grid grid-cols-6 gap-2 p-2 min-h-[10lvh] windowpane hidden">
    <%= render "treeform", tree: Tree.new %>
  </div>
</div>
