<%= form_with(model: job) do |form| %>
  <% if job.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid gap-2 p-2" data-controller="jobform">
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :start %>
      <input id="startdate"></input>
      <%= form.datetime_field :start, class: "border border-black col-start-2" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :end %>
      <input id="enddate"></input>
      <%= form.datetime_field :end, class: "border border-black col-start-2" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :estimator %>
      <%= form.text_field :estimator, class: "rounded-lg font-righteous text-lg px-2 bg-slate-100 font-bold focus:bg-emerald-50" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :foreman %>
      <%= form.text_field :foreman, class: "rounded-lg font-righteous text-lg px-2 bg-slate-100 font-bold focus:bg-emerald-50" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: "rounded-lg font-righteous text-lg px-2 bg-slate-100 font-bold focus:bg-emerald-50" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :crew_size %>
      <%= form.number_field :crew_size, class: "rounded-lg font-righteous text-lg px-2 bg-slate-100 font-bold focus:bg-emerald-50" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :est_hours %>
      <%= form.number_field :est_hours, class: "rounded-lg font-righteous text-lg px-2 bg-slate-100 font-bold focus:bg-emerald-50" %>
    </div>
    <div class="grid grid-cols-[8rem_1fr] border-b p-2 rounded-md border-dark bg-white">
      <%= form.label :price %>
      <%= form.number_field :price, step: 1, class: "rounded-lg font-righteous text-lg px-2 bg-slate-100 font-bold focus:bg-emerald-50" %>
    </div>

    <div class="hidden">
    </div>
    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>
