<section class="grid min-h-[100lvh] gap-2 p-4 font-bold bg-dark font-josefin text-slate-100 text-xl">  
  
  <h2 class="text-8xl">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="grid gap-2">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-dark px-2" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "text-dark px-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-dark px-2" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>